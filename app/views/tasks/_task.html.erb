<div class="row clearfix>
    <% if task.completed? %>
        <div class="complete">
            <%= button_to "Mark as complete", complete_project_task_path(@project, task.id), method: :patch %>
        </div>
        <div class="task">
            <p style = "opacity: 0.4;"><strike><%= task.content %></strike></p>
        </div>
        <div class="trash">
            <%= button_to "Delete", project_task_path(@project, task.id), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
        </div>
    <% else %>
        <div class="complete">
            <%= button_to "Mark as complete", complete_project_task_path(@project, task.id), method: :patch %>
        </div>
        <div class="task">
            <p><%= task.content %></p>
        </div>
        <div class="trash">
            <%= button_to "Delete", project_task_path(@project, task.id), form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete %>
        </div>
    <% end %>
</div>