<p id="notice"><%= notice %></p>

<h2 class="todo_list_title"><%= @project.tittle %></h2>
<p class="todo_list_sub_title"><%= @project.description %></p>

<div id="todo_items_wrapper">
	<%= render @project.tasks %>
	<div id="form">
		<%= render "tasks/form" %>
	</div>
</div>

<div class="links">
	<%= link_to 'Edit', edit_project_path(@project), class: 'link_to' %> 
	<%= link_to 'Back', projects_path, class: 'link_to' %> 
	<%= button_to 'Delete',project_path(@project),  form: { data: { turbo_confirm: "Are you sure?" } }, method: :delete,  class: 'button_delete' %>
</div>